{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2018",
        "lib": ["es2018"],
        "allowJs": true,

        "outDir": "../../out",
        "rootDir": "../../",

        "strict": true,
        "sourceMap": true,
        "incremental": false,
        "pretty": true,

        "resolveJsonModule": true,
        "experimentalDecorators": true,

        "baseUrl": ".",
        "paths": {
            "server/*": [
                "./*"
            ],
            "front/*": [
                "../front/*"
            ]
        },
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "./**/*",
        "../front/admin/app-state",
        "../front/client/app-state"
    ]
}
