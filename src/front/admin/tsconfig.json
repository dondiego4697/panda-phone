{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "lib": [
            "dom",
            "es2016",
            "es2017"
        ],
        "strict": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "pretty": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "admin/*": [
                "./*"
            ],
            "@denstep-core/*": [
                "../@denstep-core/*"
            ],
            "common/*": [
                "../../common/*"
            ]
        }
    },
    "include": [
        "../admin",
        "../../common",
        "../@denstep-core"
    ]
}
